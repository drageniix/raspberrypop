<resources>
    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="colorPrimary">@color/light_colorPrimary</item>
        <item name="colorPrimaryDark">@color/light_colorPrimaryDark</item>
        <item name="colorAccent">@color/light_colorAccent</item>
        <item name="colorAccent2">@color/light_colorAccent2</item>
        <item name="colorSelection">@color/light_selection</item>
        <item name="backgroundColor">@color/light_background</item>
        <item name="textColor">@color/light_textColor</item>
        <item name="scanImage">@drawable/scan</item>
        <item name="navImage">@drawable/nav_image</item>
        <item name="android:fontFamily">@font/default_font</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="colorPrimary">@color/dark_colorPrimary</item>
        <item name="colorPrimaryDark">@color/dark_colorPrimaryDark</item>
        <item name="colorAccent">@color/dark_colorAccent</item>
        <item name="colorAccent2">@color/dark_colorAccent2</item>
        <item name="colorSelection">@color/dark_selection</item>
        <item name="backgroundColor">@color/dark_background</item>
        <item name="textColor">@color/dark_textColor</item>
        <item name="scanImage">@drawable/scan_dark</item>
        <item name="navImage">@drawable/nav_image_dark</item>
        <item name="android:fontFamily">@font/default_font</item>
    </style>

    <style name="AmoledDarkTheme" parent="DarkTheme">
        <item name="android:windowBackground">@color/amoled_background</item>
        <item name="colorPrimary">@color/amoled_colorPrimary</item>
        <item name="colorPrimaryDark">@color/amoled_colorPrimaryDark</item>
        <item name="colorAccent">@color/amoled_colorAccent</item>
        <item name="colorAccent2">@color/amoled_colorAccent2</item>
        <item name="backgroundColor">@color/amoled_background</item>
        <item name="textColor">@color/amoled_textColor</item>
        <item name="navImage">@drawable/nav_image_amoled</item>
    </style>

    <style name="SeasonalTheme" parent="LightTheme">
        <item name="colorPrimary">@color/seasonal_colorPrimary</item>
        <item name="colorPrimaryDark">@color/seasonal_colorPrimaryDark</item>
        <item name="colorAccent">@color/seasonal_colorAccent</item>
        <item name="colorAccent2">@color/seasonal_colorAccent2</item>
        <item name="backgroundColor">@color/seasonal_background</item>
        <item name="textColor">@color/seasonal_textColor</item>
        <item name="navImage">@drawable/nav_image_seasonal</item>
    </style>

    <style name="SeasonalTheme2" parent="LightTheme">
        <item name="colorPrimary">@color/seasonal2_colorPrimary</item>
        <item name="colorPrimaryDark">@color/seasonal2_colorPrimaryDark</item>
        <item name="colorAccent">@color/seasonal2_colorAccent</item>
        <item name="colorAccent2">@color/seasonal2_colorAccent2</item>
        <item name="backgroundColor">@color/seasonal2_background</item>
        <item name="textColor">@color/seasonal2_textColor</item>
        <item name="navImage">@drawable/nav_image_seasonal2</item>
    </style>

    <style name="SeasonalTheme3" parent="LightTheme">
        <item name="colorPrimary">@color/seasonal3_colorPrimary</item>
        <item name="colorPrimaryDark">@color/seasonal3_colorPrimaryDark</item>
        <item name="colorAccent">@color/seasonal3_colorAccent</item>
        <item name="colorAccent2">@color/seasonal3_colorAccent2</item>
        <item name="backgroundColor">@color/seasonal3_background</item>
        <item name="textColor">@color/seasonal3_textColor</item>
        <item name="navImage">@drawable/nav_image_seasonal3</item>
    </style>

    <style name="SeasonalTheme4" parent="LightTheme">
        <item name="colorPrimary">@color/seasonal4_colorPrimary</item>
        <item name="colorPrimaryDark">@color/seasonal4_colorPrimaryDark</item>
        <item name="colorAccent">@color/seasonal4_colorAccent</item>
        <item name="colorAccent2">@color/seasonal4_colorAccent2</item>
        <item name="backgroundColor">@color/seasonal4_background</item>
        <item name="textColor">@color/seasonal4_textColor</item>
        <item name="navImage">@drawable/nav_image_seasonal4</item>
    </style>


    <style name="FloatingTheme" parent="LightTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="colorPrimaryDark">@color/amoled_colorPrimaryDark</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>


    <!-- Scan and Splash Theme  -->
    <style name="Base" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="textColor">@color/light_textColor</item>
    </style>

    <style name="Base.TransparentTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Base.SplashTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
</resources>
