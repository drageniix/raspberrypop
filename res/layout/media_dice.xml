<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_margin="16dp">

    <LinearLayout
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:drawableEnd="@drawable/ic_action_add_light"
            android:drawableTint="?colorAccent"
            android:gravity="center"
            android:text="@string/dice_add"
            android:id="@+id/add_die"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"/>
        <Button
            android:padding="8dp"
            android:drawableTint="?colorAccent"
            android:text="@string/dice_options"
            android:drawableEnd="@drawable/ic_action_settings"
            android:id="@+id/dice_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <GridView
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grid"/>
</LinearLayout>